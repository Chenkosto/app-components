{
  "name": "app-components",
  "version": "0.1.4",
  "description": "Datorama React components lib",
  "author": "Shay Keinan",
  "repository": "https://github.com/datorama/app-components",
  "private": true,
  "peerDependencies": {
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.4.9",
    "babel-loader": "^8.0.5",
    "bundlesize": "^0.17.1",
    "copy-webpack-plugin": "^5.0.0",
    "css-loader": "^1.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.16.4",
    "prop-types": "^15.7.2",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "rimraf": "2.6.2",
    "style-loader": "^0.23.1",
    "styled-components": "4.1.1",
    "terser-webpack-plugin": "1.1.0",
    "webpack": "4.28.3",
    "webpack-cli": "^3.2.3"
  },
  "scripts": {
    "test": "bundlesize",
    "test:once": "bundlesize",
    "heroku-prebuild": "cd app && npm install",
    "start": "cd app && npm start",
    "heroku-postbuild": "cd app && npm run build",
    "lib:build": "rimraf dist && webpack && npm test && cd app && npm run generate:docs",
    "lib:watch": "rimraf dist && webpack -w"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "60 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:once && lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "app/src/**/*.{js,jsx,json,css,scss}": [
        "prettier --single-quote --write",
        "git add"
      ]
    }
  }
}
